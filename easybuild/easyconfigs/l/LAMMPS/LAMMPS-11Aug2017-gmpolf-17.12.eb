# Contributed by Luca Marsella and Victor Holanda Rusu (CSCS)
easyblock = 'MakeCp'

name = 'LAMMPS'
version = '11Aug17'
release = 'stable_11Aug2017'

homepage = 'http://lammps.sandia.gov/'
description = "LAMMPS (Large-scale Atomic/Molecular Massively Parallel Simulator) is a classical molecular dynamics simulation code designed to run efficiently on parallel computers."

toolchain = {'name': 'gmpolf', 'version': '17.12'}
toolchainopts = { 'usempi': True, 'openmp': True }

source_urls = ['https://github.com/lammps/lammps/archive']
sources = ['%s.tar.gz' % (release)]

prebuildopts = ' cd ./src && '
prebuildopts += ' make yes-standard yes-user-cg-cmm yes-user-omp yes-user-reaxc yes-user-misc && '
prebuildopts += ' make no-voronoi no-reax no-poems no-meam no-kim no-kokkos no-mscg no-gpu && '
prebuildopts += ' make package-update && '
# go to folder ./lib/reax and make package reax
prebuildopts += ' pushd ../lib/reax && make -f Makefile.gfortran && popd && '
#Â create Makefile.omp and correct Makefile.mpi
prebuildopts += ' sed -e \'s/mpicxx/mpicxx -fopenmp/\' ./MAKE/Makefile.mpi > ./MAKE/Makefile.omp && '
prebuildopts += ' cp ../lib/python/Makefile.lammps.python3 ../lib/python/Makefile.lammps && '
buildopts = [ ' mpi ', ' omp ' ]

dependencies = [
    ('FFTW', '3.3.7'),
    ('Python', '3.6.2'),
]

files_to_copy = [(['src/lmp*'], "bin")]

sanity_check_paths = {
    'files': ['bin/lmp_mpi','bin/lmp_omp'],
    'dirs': [],
}

moduleclass = 'chem'
